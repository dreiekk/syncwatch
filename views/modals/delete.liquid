<div class="modal-header">
    <h5 class="modal-title">Confirmation</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span>&times;</span>
    </button>
</div>
<div class="modal-body">
    Are you sure you want to delete "{{doc.filename}}"?
</div>
<div class="modal-footer">
    <input type="hidden" id="hidden_file_id" value="{{doc.relpath}}">
    <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="apiPostAjax('id='+document.getElementById('hidden_file_id').value+'&action=delete');">Yes</button>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
</div>
