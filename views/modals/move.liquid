<div class="modal-header">
    <h5 class="modal-title">Confirmation</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span>&times;</span>
    </button>
</div>
<div class="modal-body">
    Where do you want to move "{{doc.filename}}"?
    <div class="btn-group-vertical list-group mt-2">
        <input type="hidden" id="hidden_file_id" value="{{doc.relpath}}">
        {% for doc2 in docs %}
        <input type="hidden" id="hidden_file2_id_{{forloop.index}}" value="{{doc2.relpath}}">
        <button type="button" class="btn btn-primary" data-dismiss="modal"
        onclick="apiPostAjax('id1='+document.getElementById('hidden_file_id').value+'&id2='+document.getElementById('hidden_file2_id_{{forloop.index}}').value+'&action=check-move2');">{{doc2.relpath}}</button>
        {% endfor %}
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
</div>
